{% extends 'base.html.twig' %}
    
{% block title %}{{class}}{% endblock %} {# insert of title (3 letters id) #}


{% block favicon %}
<link rel="icon" type="image/png" href="../favicon.png">
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ '../css/style.css' }}"/>
{% endblock %}


{% block body %}

    <div class="container">
        <div>
            <br>
            <a href="/classes" class="retour"><- Retour</a>
            <br>
            <h4>{% block nomClasse %}Classe de {{className}}{% endblock %}</h4> {# insert of class name (full desc) #}

            <hr width="20%" color= "{{color}}" align="left">
            <br>

            {# block carrousel #}
            {% if img[1] is defined %}
                <div class="slideshow-container" id="slideshow0">

            {% for image in img %}
                    <div class="mySlides">
                        <img class="image_accueil" src="..\img\Classes\{{image}}" onmouseover="stopCarrousel(0)" onmouseout="resumeCarrousel(0)">
                    </div>
            {% endfor %}

                    {#<a class="prev" onclick="buttonSlides(-1)">&#10094;</a>
                    <a class="next" onclick="buttonSlides(1)">&#10095;</a>#}

                </div>
            
            {% else %}
                <img class="image_accueil" src="..\img\Classes\{{img[0]}}">
            {% endif %}
            {# endblock #}

            <br>

            {# block profs#}

                <h4>Enseignant(e/s/es):</h4>
                <p>{{listeProfs}}</p>

            {# endblock #}

            {# block newsClasse#}

                <h4>Texte:</h4>
                <p>Exemple de texte de description de classe</p>

                {# block carrousel #}
                {% if img[1] is defined %}
                    <div class="slideshow-container" id="slideshow1">
    
                {% for image in img %}
                        <div class="mySlides">
                            <img class="image_accueil" src="..\img\Classes\{{image}}" onmouseover="stopCarrousel(1)" onmouseout="resumeCarrousel(1)">
                        </div>
                {% endfor %}
    
                        {#<a class="prev" onclick="buttonSlides(-1)">&#10094;</a>
                        <a class="next" onclick="buttonSlides(1)">&#10095;</a>#}
    
                    </div>
                
                {% else %}
                    <img class="image_accueil" src="..\img\Classes\{{img[0]}}">
                {% endif %}
                {# endblock #}

                <br>

            {# endblock #}

        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {% if img[1] is defined %}
        <script type="text/javascript" src="../js/carrousel/autoCarrousel.js"></script>
    {% endif %}
    <script type="text/javascript" src="../js/classe/background.js"></script>
{% endblock %}
